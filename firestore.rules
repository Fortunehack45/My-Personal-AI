rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own data.
    // This includes listing their own conversations and the messages within them.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /conversations/{conversationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }

    // Feedback can be written by any authenticated user and read by anyone.
    // In a production app, you would restrict read access to admins.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if true;
    }
  }
}
