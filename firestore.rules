rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write to their own user document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      // Users can create their own user document upon signup.
      allow create: if request.auth.uid == userId;

      // Users can manage their own conversations.
      match /conversations/{conversationId} {
        allow read, create, update, delete: if request.auth.uid == userId;

        // Users can manage messages within their own conversations.
        match /messages/{messageId} {
          allow read, create, update, delete: if request.auth.uid == userId;
        }
      }
    }

    // Feedback collection rules
    match /feedback/{feedbackId} {
      // Any authenticated user can create feedback.
      allow create: if request.auth != null;
      // For now, allow any authenticated user to read. In production, you'd restrict this to admins.
      // The admin page logic already filters by a specific email, but this rule allows the read to happen.
      allow read: if request.auth != null;
    }
  }
}
